---
import Layout from "../layouts/Layout.astro";
import { workPageContent } from "../config";
import ResumeItem from "../components/ResumeItem.astro";
import {marked} from "marked"

const workDescription = marked.parse(workPageContent.description)
---

<Layout seo={workPageContent.seo}>
  <div class="relative min-h-screen">
    <!-- Vertical text on left -->
    <div class="hidden lg:flex items-center justify-center w-16 fixed left-4 top-1/2 -translate-y-1/2">
      <p class="vertical-text text-xs tracking-[0.3em] uppercase opacity-40">
        Experience
      </p>
    </div>

    <section class="px-6 lg:px-16 pt-16 lg:pt-24 max-w-4xl">
      <!-- Header -->
      <div class="mb-12">
        <span class="bracket-label opacity-60 mb-4 block">[Resume]</span>
        <h1 class="text-4xl lg:text-5xl font-bold tracking-tight mb-4">Work</h1>
        <p class="opacity-60 max-w-md">{workPageContent.subtitle}</p>
      </div>

      <!-- Description -->
      <div class="mb-16 max-w-2xl opacity-80">
        <Fragment set:html={workDescription} />
      </div>

      <!-- Work items -->
      <div class="space-y-8">
        {workPageContent.items.map((item, index) => (
          <div class="flex items-start gap-6">
            <span class="text-2xl font-bold opacity-20 shrink-0 hidden sm:block pt-2">
              [{String(index + 1).padStart(2, '0')}]
            </span>
            <ResumeItem {...item} />
          </div>
        ))}
      </div>
    </section>
  </div>
</Layout>
